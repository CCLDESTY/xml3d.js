<!-- 
	Purpose of Test:
    Very basic template functionality 
-->
<XflowTest>
    <Input>
        <data id="template1">
            <float name="A" replaceby="tA" >0.1</float>
            <float name="B" replaceby="tC" id="tC1" >0.2</float>
            <float name="C" replaceby="tB" id="tB1" >0.3</float>
        </data>
       
         <data id="data1" template="#template1" >        
            <float name="tA" >1.1</float>  
            <float name="tB" id="B1" >1.2</float>
            <float name="tC" id="C1" >1.3</float>
         </data>
    </Input>
    <TestProcess>
    
        <Check title="Check template output" data="#template1">
            <MatchData name="A" type="float" >0.1</MatchData>
            <MatchData name="B" type="float" >0.2</MatchData>
            <MatchData name="C" type="float" >0.3</MatchData>
        </Check>
        <Check title="Check instance output" data="#data1">
            <MatchData name="tA" type="float" >1.1</MatchData>
            <MatchData name="tB" type="float" >1.2</MatchData>
            <MatchData name="tC" type="float" >1.3</MatchData>
            <MatchData name="A" type="float" >1.1</MatchData>
            <MatchData name="B" type="float" >1.3</MatchData>
            <MatchData name="C" type="float" >1.2</MatchData>
        </Check>
        <Modification title="rename stuff" >
            <ChangeAttribute node="#tC1" attrName="replaceby" newValue="C" />
            <ChangeAttribute node="#tB1" attrName="replaceby" newValue="B" />
            <ChangeAttribute node="#B1" attrName="name" newValue="B" />
            <ChangeAttribute node="#C1" attrName="name" newValue="C" />
        </Modification>
        <Check title="Check instance output" data="#data1">
            <MatchData name="B" type="float" >1.3</MatchData>
            <MatchData name="C" type="float" >1.2</MatchData>
            <MatchNull name="tB" />
            <MatchNull name="tC" />
        </Check>
        
    </TestProcess>
</XflowTest>
